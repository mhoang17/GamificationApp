
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical">

    <include layout="@layout/backgrounds"/>
    <include layout="@layout/backbuildings"/>
    <include layout="@layout/middlebuildings"/>
    <include layout="@layout/frontBuildings"/>
    <include layout="@layout/roads"/>

    <ImageView
        android:src="@drawable/v4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/car1"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:layout_marginBottom = "70dp"
        android:layout_marginLeft = "-70dp"
    />

    <include layout="@layout/koalascene"
        android:visibility="gone"
        android:id = "@+id/koalaScene" />
    <include layout="@layout/polarbearbackgrounds"
        android:visibility="gone"
        android:id = "@+id/PBScene"/>
    
    
    <include layout = "@layout/progressbar"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above = "@+id/quizButton"
            android:id="@+id/factView"
            android:visibility = "visible"
            android:background = "@android:color/white"
            android:padding = "30dp"
            android:layout_margin = "40dp"
            android:layout_centerInParent = "true">

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/factText"
            android:layout_centerHorizontal = "true"
        />

        <Button
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeFactButton"
            android:layout_below = "@+id/factText"
            android:layout_centerHorizontal = "true"
            android:layout_marginTop = "10dp"
        />
    </RelativeLayout>
    
    
    <ImageButton
        android:src="@android:drawable/star_big_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quizButton"
        android:layout_centerInParent = "true"
        android:visibility = "gone"
    />


    <include layout="@layout/updateBackgroundPopUp"/>
    <include layout="@layout/chooseanimalpopup"/>
    <include layout ="@layout/quizlayout"/>
    <include layout="@layout/menuBar"/>
    <include layout="@layout/createuserpopup"/>
    <include layout="@layout/profilepopup"/>
    <include layout = "@layout/tripspopup"/>
    <include layout = "@layout/trophiesPopUp"/>
    
    

</RelativeLayout>