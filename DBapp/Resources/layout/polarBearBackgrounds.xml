
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:scaleType="fitXY"
        android:id="@+id/PBBackground5"
        android:src="@drawable/pbbg5"
        android:visibility = "visible"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:scaleType="fitXY"
        android:id="@+id/PBBackground4"
        android:src="@drawable/pbbg4"
        android:visibility = "visible"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:scaleType="fitXY"
        android:id="@+id/PBBackground3"
        android:src="@drawable/pbbg3"
        android:visibility = "visible"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:scaleType="fitXY"
        android:id="@+id/PBBackground2"
        android:src="@drawable/pbbg2"
        android:visibility = "visible"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:scaleType="fitXY"
        android:id="@+id/PBBackground1"
        android:src="@drawable/pbbg1"
        android:visibility = "visible"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent = "true"
        android:layout_margin = "60dp"
        android:background = "@drawable/dialoguebox"
        android:id="@+id/pbDialogueBox"
        android:visibility = "gone"
        >
        
        <TextView
            android:text=""
            android:padding = "10dp"
            android:layout_marginTop = "10dp"
            android:layout_marginRight = "10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id = "@+id/pbDialogueText3"
            android:layout_marginLeft = "130dp"
            android:gravity = "center"
            android:background = "@android:color/white"
        />

        <TextView
            android:text=""
            android:padding = "10dp"
            android:layout_marginTop = "10dp"
            android:layout_marginRight = "10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id = "@+id/pbDialogueText2"
            android:layout_marginLeft = "130dp"
            android:gravity = "center"
            android:background = "@android:color/white"
        />

        <TextView
            android:text=""
            android:padding = "10dp"
            android:layout_marginTop = "10dp"
            android:layout_marginRight = "10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id = "@+id/pbDialogueText1"
            android:layout_marginLeft = "130dp"
            android:gravity = "center"
            android:background = "@android:color/white"
        />
        
       <TextView
            android:text="Next >"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding = "10dp"
            android:layout_below = "@+id/pbDialogueText1"
            android:layout_alignParentRight = "true"
        />

        <ImageView
            android:src="@drawable/pb_sighing"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:id="@+id/pbSighingIcon"
            android:scaleType="fitXY"
            android:paddingTop = "10dp"
            android:layout_marginRight = "80dp"
            android:layout_centerVertical = "true"
            android:visibility = "gone"
        />

        <ImageView
            android:src="@drawable/pb_tired"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:id="@+id/pbTiredIcon"
            android:scaleType="fitXY"
            android:paddingTop = "10dp"
            android:layout_marginRight = "80dp"
            android:layout_centerVertical = "true"
            android:visibility = "gone"
        />

        <ImageView
            android:src="@drawable/pb_thinking"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:id="@+id/pbThinkingIcon"
            android:scaleType="fitXY"
            android:paddingTop = "10dp"
            android:layout_marginRight = "80dp"
            android:layout_centerVertical = "true"
            android:visibility = "gone"
        />

        <ImageView
            android:src="@drawable/pb_smiling"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:id="@+id/pbSmilingIcon"
            android:scaleType="fitXY"
            android:paddingTop = "10dp"
            android:layout_marginRight = "80dp"
            android:layout_centerVertical = "true"
            android:visibility = "gone"
        />

    </RelativeLayout>

    <ImageView
        android:src="@drawable/pb_sighing"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/pbSighing"
        android:layout_alignParentBottom = "true"
        android:layout_centerHorizontal = "true"
        android:layout_marginBottom = "150dp"
        android:visibility = "gone"
    />

    <ImageView
        android:src="@drawable/pb_thinking"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/pbThinking"
        android:layout_alignParentBottom = "true"
        android:layout_centerHorizontal = "true"
        android:layout_marginBottom = "150dp"
        android:visibility = "gone"
    />

    <ImageView
        android:src="@drawable/pb_smiling"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/pbSmiling"
        android:layout_alignParentBottom = "true"
        android:layout_centerHorizontal = "true"
        android:layout_marginBottom = "150dp"
        android:visibility = "gone"
    />
</RelativeLayout>