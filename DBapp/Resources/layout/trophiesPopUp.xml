<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_margin="40dp"
    android:background = "@android:color/white"
    android:id = "@+id/trophiesPopUp"
    android:visibility = "gone"
    >
    
    <TextView
        android:text="Trophies"
        android:textSize = "40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trophyHeader"
    />
    


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Walk 500 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy500m" 
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Walk 1000 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy1000m"
                android:layout_below = "@+id/trophy500m"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Walk 2500 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy2500m"
                android:layout_below = "@+id/trophy1000m"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Walk 5000 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy5000m"
                android:layout_below = "@+id/trophy2500m"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Walk 7500 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy7500m"
                android:layout_below = "@+id/trophy5000m"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Walk 10,000 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy10000m"
                android:layout_below = "@+id/trophy7500m"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Ride Bike for 500 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy500mBike"
                android:layout_below = "@+id/trophy10000m"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Ride Bike for 1000 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy1000mBike"
                android:layout_below = "@+id/trophy500mBike"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Ride Bike for 2500 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy2500mBike"
                android:layout_below = "@+id/trophy1000mBike"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Ride Bike for 5000 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy5000mBike"
                android:layout_below = "@+id/trophy2500mBike"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Ride Bike for 7500 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy7500mBike"
                android:layout_below = "@+id/trophy5000mBike"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Ride Bike for 10,000 m"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trophy10000mBike"
                android:layout_below = "@+id/trophy7500mBike"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Walk 10 trips"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Walk10Trips"
                android:layout_below = "@+id/trophy10000mBike"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="Walk 20 trips"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Walk20Trips"
                android:layout_below = "@+id/Walk10Trips"
                android:layout_margin = "10dp"
            />
            <TextView
                android:text="Walk 30 trips"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Walk30Trips"
                android:layout_below = "@+id/Walk20Trips"
                android:layout_margin = "10dp"
            />

            <TextView
                android:text="More sustainable transport"
                android:textSize = "25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sustainableTransportTrophy"
                android:layout_below = "@+id/Walk30Trips"
                android:layout_margin = "10dp"
            />
        </RelativeLayout>
    </ScrollView>
    
        <Button
                android:text="Close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/closeTrophiesPopUp" />

</LinearLayout>
